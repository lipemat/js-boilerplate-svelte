{
  "extends": "@lipemat/js-boilerplate/config/tsconfig.json",
  "include": [
    "bin/**/*",
    "config/**/*",
    "helpers/**/*",
    "tests/**/*"
  ],
  "compilerOptions": {
    "esModuleInterop": true,
    "module": "CommonJS",
    "moduleResolution": "Bundler",
    "skipLibCheck": true,
    "sourceMap": false,
    "strict": true,
    "target": "ES2022"
  }
}
