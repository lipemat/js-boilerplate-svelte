{
  "extends": "@lipemat/js-boilerplate/config/tsconfig.json",
  "compilerOptions": {
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": true,
    "target": "ES2024",
    "paths": {
      "@typescript-eslint/utils/ts-eslint": [
        "./node_modules/@typescript-eslint/utils/dist/ts-eslint"
      ]
    }
  },
  "include": [
    "bin/**/*.ts",
    "config/**/*.ts",
    "helpers/**/*.ts",
    "lib/**/*.ts",
    "jest/**/*.ts",
    "types/*.d.ts"
  ]
}
