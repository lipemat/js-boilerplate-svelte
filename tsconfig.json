{
  "extends": "@lipemat/js-boilerplate/config/tsconfig.json",
  "compilerOptions": {
    "allowJs": true,
    "module": "CommonJS",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "target": "ES2024"
  },
  "include": [
    "bin/**/*.ts",
    "config/**/*.ts",
    "helpers/**/*.ts",
    "lib/**/*.ts",
    "tests/**/*.ts",
    "jest.config.ts"
  ]
}
