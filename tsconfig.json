{
  "extends": "@lipemat/js-boilerplate/config/tsconfig.json",
  "compilerOptions": {
    "allowJs": true,
    "module": "CommonJS",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "target": "ES2024"
  },
  "include": [
    "bin/**/*",
    "config/**/*",
    "helpers/**/*",
    "tests/**/*"
  ]
}
